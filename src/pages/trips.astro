---
import Layout from '../layouts/Layout.astro'
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Button from '../components/ui/Button.astro'

import feature02 from '../assets/cards/feature-02.svg'

const SEO = {
  title: 'Mission Trips | Frontier Nations',
  description:
    'Explore upcoming mission trips and training opportunities from Frontier Nations. Filter by continent, month, and trip type to find your fit.',
}
---

<Layout title={SEO.title} description={SEO.description}>
  <Section id="mission-trips" classes="pt-16 pb-20">
    <!-- Foxi compact block -->
    <div
      class="mx-auto max-w-6xl rounded-2xl border px-5 py-6 sm:px-8 sm:py-8
             bg-white/70 border-neutral-200 shadow-sm
             dark:bg-neutral-900/60 dark:border-neutral-800 dark:shadow-none
             backdrop-blur"
    >
      <!-- Header -->



        <Row>
    <Col span="12" align="center" classes="mb-8 max-w-4xl mx-auto">
      <h2 class="text-pretty">Innovative tools to <strong>transform</strong> your workflow</h2>
          <p class="text-neutral-700 dark:text-neutral-400 text-base sm:text-lg">
            Explore short-term trips across the nations.
          </p>
    </Col>
  </Row>


      <!-- Filter Controls (dropdowns) -->
      <Row>
        <Col span="12">
          <div
            class="controls mx-auto max-w-5xl rounded-xl border px-3 py-3 sm:px-4 sm:py-4
                   bg-white/80 border-neutral-200
                   dark:bg-neutral-950/50 dark:border-neutral-800
                   backdrop-blur flex flex-wrap items-center justify-center gap-3"
          >
            <!-- Continent -->
            <div class="flex flex-col sm:flex-row items-center gap-2">
              <label for="continent-filter" class="text-xs sm:text-sm text-neutral-700 dark:text-neutral-400">Continent:</label>
              <select
                id="continent-filter"
                class="h-9 px-3 rounded-lg bg-white dark:bg-neutral-950
                       border border-neutral-300 dark:border-neutral-800
                       text-sm text-neutral-800 dark:text-neutral-200
                       focus:outline-none focus:ring-2 focus:ring-primary-500/40 focus:border-primary-500"
              >
                <option value="">All</option>
                <option value="asia">Asia</option>
                <option value="pacific">Pacific</option>
                <option value="africa">Africa</option>
              </select>
            </div>

            <!-- Month -->
            <div class="flex flex-col sm:flex-row items-center gap-2">
              <label for="month-filter" class="text-xs sm:text-sm text-neutral-700 dark:text-neutral-400">Month–Year:</label>
              <select
                id="month-filter"
                class="h-9 px-3 rounded-lg bg-white dark:bg-neutral-950
                       border border-neutral-300 dark:border-neutral-800
                       text-sm text-neutral-800 dark:text-neutral-200
                       focus:outline-none focus:ring-2 focus:ring-primary-500/40 focus:border-primary-500"
              >
                <option value="">All</option>
                <option value="2026-01">Jan 2026</option>
                <option value="2026-04">Apr 2026</option>
                <option value="2026-05">May 2026</option>
                <option value="2026-07">Jul 2026</option>
                <option value="2026-09">Sep 2026</option>
                <option value="2027-01">Jan 2027</option>
              </select>
            </div>

            <!-- Type -->
            <div class="flex flex-col sm:flex-row items-center gap-2">
              <label for="type-filter" class="text-xs sm:text-sm text-neutral-700 dark:text-neutral-400">Trip Type:</label>
              <select
                id="type-filter"
                class="h-9 px-3 rounded-lg bg-white dark:bg-neutral-950
                       border border-neutral-300 dark:border-neutral-800
                       text-sm text-neutral-800 dark:text-neutral-200
                       focus:outline-none focus:ring-2 focus:ring-primary-500/40 focus:border-primary-500"
              >
                <option value="">All</option>
                <option value="short-term">Short-term</option>
                <option value="training">Training</option>
                <option value="discipleship">Discipleship</option>
                <option value="outreach">Outreach</option>
                <option value="campus">Campus</option>
              </select>
            </div>

            <!-- Clear -->
            <div class="basis-full h-0"></div>
            <div class="w-full flex justify-center pt-2">
              <button id="clear-filters" type="button" disabled class="btn-clear">
                Clear all filters
              </button>
            </div>
          </div>
        </Col>
      </Row>

      <!-- Trip Grid -->
      <Row>
        <Col span="12">
          <div id="trips" class="mt-8 sm:mt-10">
            <ul class="list grid gap-5 sm:gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
              <!-- Card 1 -->
              <li
                class="trip-card group flex flex-col rounded-xl overflow-hidden border transition
                       bg-white/90 border-neutral-200 hover:-translate-y-0.5 hover:shadow-md
                       dark:bg-neutral-900/60 dark:border-neutral-800
                       hover:border-primary-500/70"
                data-continent="asia"
                data-month="2026-04"
                data-type="short-term"
              >
                <img src={feature02.src} alt="Nepal Mission Trip" class="w-full h-44 sm:h-48 object-cover" />
                <div class="flex flex-col flex-grow p-5 sm:p-6">
                  <h3 class="trip-name text-base sm:text-lg font-semibold mb-2 text-neutral-900 dark:text-neutral-100">
                    Nepal – April 2026
                  </h3>
                  <p class="trip-desc text-neutral-700 dark:text-neutral-400 text-sm mb-4">
                    Short-term outreach in Kathmandu.
                  </p>
                  <p class="mt-1 text-xs text-neutral-600 dark:text-neutral-500">
                    Continent: Asia • Month: 2026-04 • Type: Short-term
                  </p>
                  <div class="mt-auto pt-5 flex justify-center">
                    <Button
                      size="base"
                      style="primary"
                      modal="signup"
                      classes="w-auto self-center px-6 !text-white !bg-primary-500 hover:!bg-neutral-300 dark:hover:!bg-neutral-600 focus:!ring-2 focus:!ring-primary-500/40"
                    >
                      Learn More
                    </Button>
                  </div>
                </div>
              </li>

              <!-- Card 2 -->
              <li
                class="trip-card group flex flex-col rounded-xl overflow-hidden border transition
                       bg-white/90 border-neutral-200 hover:-translate-y-0.5 hover:shadow-md
                       dark:bg-neutral-900/60 dark:border-neutral-800
                       hover:border-primary-500/70"
                data-continent="pacific"
                data-month="2026-07"
                data-type="training"
              >
                <img src={feature02.src} alt="Fiji Mission Trip" class="w-full h-44 sm:h-48 object-cover" />
                <div class="flex flex-col flex-grow p-5 sm:p-6">
                  <h3 class="trip-name text-base sm:text-lg font-semibold mb-2 text-neutral-900 dark:text-neutral-100">
                    Fiji – July 2026
                  </h3>
                  <p class="trip-desc text-neutral-700 dark:text-neutral-400 text-sm mb-4">
                    Training + village evangelism.
                  </p>
                  <p class="mt-1 text-xs text-neutral-600 dark:text-neutral-500">
                    Continent: Pacific • Month: 2026-07 • Type: Training
                  </p>
                  <div class="mt-auto pt-5 flex justify-center">
                    <Button
                      size="base"
                      style="primary"
                      modal="signup"
                      classes="w-auto self-center px-6 !text-white !bg-primary-500 hover:!bg-neutral-300 dark:hover:!bg-neutral-600 focus:!ring-2 focus:!ring-primary-500/40"
                    >
                      Learn More
                    </Button>
                  </div>
                </div>
              </li>

              <!-- Card 3 -->
              <li
                class="trip-card group flex flex-col rounded-xl overflow-hidden border transition
                       bg-white/90 border-neutral-200 hover:-translate-y-0.5 hover:shadow-md
                       dark:bg-neutral-900/60 dark:border-neutral-800
                       hover:border-primary-500/70"
                data-continent="africa"
                data-month="2026-05"
                data-type="outreach"
              >
                <img src={feature02.src} alt="Kenya Mission Trip" class="w-full h-44 sm:h-48 object-cover" />
                <div class="flex flex-col flex-grow p-5 sm:p-6">
                  <h3 class="trip-name text-base sm:text-lg font-semibold mb-2 text-neutral-900 dark:text-neutral-100">
                    Kenya – May 2026
                  </h3>
                  <p class="trip-desc text-neutral-700 dark:text-neutral-400 text-sm mb-4">
                    Partnering with local churches in Nairobi.
                  </p>
                  <p class="mt-1 text-xs text-neutral-600 dark:text-neutral-500">
                    Continent: Africa • Month: 2026-05 • Type: Outreach
                  </p>
                  <div class="mt-auto pt-5 flex justify-center">
                    <Button
                      size="base"
                      style="primary"
                      modal="signup"
                      classes="w-auto self-center px-6 !text-white !bg-primary-500 hover:!bg-neutral-300 dark:hover:!bg-neutral-600 focus:!ring-2 focus:!ring-primary-500/40"
                    >
                      Learn More
                    </Button>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </Col>
      </Row>
    </div>
  </Section>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js" defer></script>
  <script is:inline>
    window.addEventListener("DOMContentLoaded", () => {
      const STORAGE_KEY = "fn_trips_filters";
      const tripList = new List("trips", { valueNames: ["trip-name", "trip-desc"] });

      const continentSel = document.getElementById("continent-filter");
      const monthSel = document.getElementById("month-filter");
      const typeSel = document.getElementById("type-filter");
      const clearBtn = document.getElementById("clear-filters");

      const baseBtn =
        "btn-clear inline-flex items-center justify-center rounded-lg px-4 py-1.5 text-sm font-semibold tracking-wide transition duration-200 focus-visible:outline-none";
      const enabledBtn =
        baseBtn + " bg-primary-500 text-white border-transparent hover:brightness-95 focus:ring-2 focus:ring-primary-500/40";
      const disabledBtn =
        baseBtn + " bg-neutral-200 text-neutral-700 border border-neutral-300 opacity-40 cursor-not-allowed dark:bg-neutral-800 dark:text-neutral-300 dark:border-neutral-700";

      function setClearEnabled(isEnabled) {
        clearBtn.disabled = !isEnabled;
        clearBtn.className = isEnabled ? enabledBtn : disabledBtn;
      }

      function saveFilters() {
        const state = { c: continentSel.value, m: monthSel.value, t: typeSel.value };
        try { sessionStorage.setItem(STORAGE_KEY, JSON.stringify(state)); } catch {}
      }

      function loadFilters() {
        try {
          const raw = sessionStorage.getItem(STORAGE_KEY);
          if (!raw) return;
          const { c = "", m = "", t = "" } = JSON.parse(raw) || {};
          continentSel.value = c; monthSel.value = m; typeSel.value = t;
        } catch {}
      }

      function applyFilters() {
        const c = continentSel.value;
        const m = monthSel.value;
        const t = typeSel.value;

        if (!c && !m && !t) {
          tripList.filter();
        } else {
          tripList.filter((item) => {
            const el = item.elm;
            return (
              (!c || el.dataset.continent === c) &&
              (!m || el.dataset.month === m) &&
              (!t || el.dataset.type === t)
            );
          });
        }
        setClearEnabled(Boolean(c || m || t));
        saveFilters();
      }

      function clearFilters() {
        continentSel.value = "";
        monthSel.value = "";
        typeSel.value = "";
        tripList.filter();
        setClearEnabled(false);
        saveFilters();
        clearBtn.blur();
      }

      loadFilters();
      applyFilters();

      continentSel.addEventListener("change", applyFilters);
      monthSel.addEventListener("change", applyFilters);
      typeSel.addEventListener("change", applyFilters);
      clearBtn.addEventListener("click", clearFilters);
    });
  </script>

  <style is:global>
    /* Clear button base (tailwind via @apply is fine if configured) */
    .btn-clear { @apply border rounded-lg; }
  </style>
</Layout>