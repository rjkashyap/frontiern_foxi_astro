---
import Layout from '../layouts/Layout.astro'
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Button from '../components/ui/Button.astro'

import feature02 from '../../assets/cards/feature-02.svg'

const SEO = {
  title: 'Mission Trips | Frontier Nations',
  description:
    'Explore upcoming mission trips and training opportunities from Frontier Nations. Filter by continent, month, and trip type to find your fit.',
}
---

<Layout title={SEO.title} description={SEO.description}>
  <Section id="mission-trips" classes="pt-20 pb-24">
    <Row>
      <Col span="12" align="center" classes="mb-8 max-w-4xl mx-auto">
        <h1 class="text-pretty text-3xl sm:text-4xl font-semibold mb-3">
          Mission Trips
        </h1>
        <p class="text-neutral-700 dark:text-neutral-400 text-lg">
          Explore short-term, training, and discipleship trips across the nations.
        </p>
      </Col>
    </Row>

    <!-- Filter Controls -->
    <Row>
      <Col span="12" align="center">
        <div
          class="controls inline-flex flex-wrap items-center justify-center gap-3 rounded-xl border border-neutral-200 dark:border-neutral-800 bg-neutral-100/80 dark:bg-neutral-900/60 px-4 py-3"
        >
          <!-- Continent -->
          <div class="flex flex-col sm:flex-row items-center gap-2">
            <label for="continent-filter" class="text-sm text-neutral-700 dark:text-neutral-400">Continent:</label>
            <select
              id="continent-filter"
              class="px-3 py-1.5 bg-white dark:bg-neutral-950 border border-neutral-300 dark:border-neutral-800 rounded-lg text-sm text-neutral-800 dark:text-neutral-200 focus:border-primary-500 focus:ring-0"
            >
              <option value="">All</option>
              <option value="asia">Asia</option>
              <option value="pacific">Pacific</option>
              <option value="africa">Africa</option>
            </select>
          </div>

          <!-- Month -->
          <div class="flex flex-col sm:flex-row items-center gap-2">
            <label for="month-filter" class="text-sm text-neutral-700 dark:text-neutral-400">Month–Year:</label>
            <select
              id="month-filter"
              class="px-3 py-1.5 bg-white dark:bg-neutral-950 border border-neutral-300 dark:border-neutral-800 rounded-lg text-sm text-neutral-800 dark:text-neutral-200 focus:border-primary-500 focus:ring-0"
            >
              <option value="">All</option>
              <option value="2026-01">Jan 2026</option>
              <option value="2026-04">Apr 2026</option>
              <option value="2026-05">May 2026</option>
              <option value="2026-07">Jul 2026</option>
              <option value="2026-09">Sep 2026</option>
              <option value="2027-01">Jan 2027</option>
            </select>
          </div>

          <!-- Type -->
          <div class="flex flex-col sm:flex-row items-center gap-2">
            <label for="type-filter" class="text-sm text-neutral-700 dark:text-neutral-400">Trip Type:</label>
            <select
              id="type-filter"
              class="px-3 py-1.5 bg-white dark:bg-neutral-950 border border-neutral-300 dark:border-neutral-800 rounded-lg text-sm text-neutral-800 dark:text-neutral-200 focus:border-primary-500 focus:ring-0"
            >
              <option value="">All</option>
              <option value="short-term">Short-term</option>
              <option value="training">Training</option>
              <option value="discipleship">Discipleship</option>
              <option value="outreach">Outreach</option>
              <option value="campus">Campus</option>
            </select>
          </div>

          <!-- Clear -->
          <button
            id="clear-filters"
            type="button"
            disabled
            class="px-4 py-1.5 text-sm rounded-lg border border-neutral-300 dark:border-neutral-700 text-neutral-700 dark:text-neutral-300 hover:bg-neutral-200 dark:hover:bg-neutral-800 hover:text-neutral-900 dark:hover:text-neutral-100 disabled:opacity-40"
          >
            Clear all filters
          </button>
        </div>
      </Col>
    </Row>

    <!-- Trip Grid -->
    <Row>
      <Col span="12">
        <div id="trips" class="mt-10">
          <ul class="list grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <!-- Card Template -->
            <li
              class="trip-card flex flex-col bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl overflow-hidden hover:border-primary-500 transition"
              data-continent="asia"
              data-month="2026-04"
              data-type="short-term"
            >
              <img src={feature02.src} alt="Nepal Mission Trip" class="w-full h-48 object-cover" />
              <div class="flex flex-col flex-grow p-6">
                <h3 class="trip-name text-lg font-semibold mb-2 text-neutral-900 dark:text-neutral-100">
                  Nepal – April 2026
                </h3>
                <p class="trip-desc text-neutral-700 dark:text-neutral-400 text-sm mb-4 flex-grow">
                  Short-term outreach in Kathmandu.
                </p>
                <div class="mt-auto pt-4">
                  <Button
                    size="base"
                    style="primary"
                    modal="signup"
                    classes="w-full !text-neutral-900 !bg-primary-500 hover:!bg-neutral-300 dark:hover:!bg-neutral-600 focus:!ring-2 focus:!ring-primary-500/40"
                  >
                    Learn More
                  </Button>
                </div>
                <p class="mt-3 text-xs text-neutral-600 dark:text-neutral-500">
                  Continent: Asia • Month: 2026-04 • Type: Short-term
                </p>
              </div>
            </li>

            <li
              class="trip-card flex flex-col bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl overflow-hidden hover:border-primary-500 transition"
              data-continent="pacific"
              data-month="2026-07"
              data-type="training"
            >
              <img src={feature02.src} alt="Fiji Mission Trip" class="w-full h-48 object-cover" />
              <div class="flex flex-col flex-grow p-6">
                <h3 class="trip-name text-lg font-semibold mb-2 text-neutral-900 dark:text-neutral-100">
                  Fiji – July 2026
                </h3>
                <p class="trip-desc text-neutral-700 dark:text-neutral-400 text-sm mb-4 flex-grow">
                  Training + village evangelism.
                </p>
                <div class="mt-auto pt-4">
                  <Button
                    size="base"
                    style="primary"
                    modal="signup"
                    classes="w-full !text-neutral-900 !bg-primary-500 hover:!bg-neutral-300 dark:hover:!bg-neutral-600 focus:!ring-2 focus:!ring-primary-500/40"
                  >
                    Learn More
                  </Button>
                </div>
                <p class="mt-3 text-xs text-neutral-600 dark:text-neutral-500">
                  Continent: Pacific • Month: 2026-07 • Type: Training
                </p>
              </div>
            </li>

            <li
              class="trip-card flex flex-col bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl overflow-hidden hover:border-primary-500 transition"
              data-continent="africa"
              data-month="2026-05"
              data-type="outreach"
            >
              <img src={feature02.src} alt="Kenya Mission Trip" class="w-full h-48 object-cover" />
              <div class="flex flex-col flex-grow p-6">
                <h3 class="trip-name text-lg font-semibold mb-2 text-neutral-900 dark:text-neutral-100">
                  Kenya – May 2026
                </h3>
                <p class="trip-desc text-neutral-700 dark:text-neutral-400 text-sm mb-4 flex-grow">
                  Partnering with local churches in Nairobi.
                </p>
                <div class="mt-auto pt-4">
                  <Button
                    size="base"
                    style="primary"
                    modal="signup"
                    classes="w-full !text-neutral-900 !bg-primary-500 hover:!bg-neutral-300 dark:hover:!bg-neutral-600 focus:!ring-2 focus:!ring-primary-500/40"
                  >
                    Learn More
                  </Button>
                </div>
                <p class="mt-3 text-xs text-neutral-600 dark:text-neutral-500">
                  Continent: Africa • Month: 2026-05 • Type: Outreach
                </p>
              </div>
            </li>
          </ul>
        </div>
      </Col>
    </Row>
  </Section>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js" defer></script>
  <script is:inline>
    window.addEventListener("DOMContentLoaded", () => {
      const STORAGE_KEY = "fn_trips_filters";
      const tripList = new List("trips", { valueNames: ["trip-name", "trip-desc"] });
      const continentSel = document.getElementById("continent-filter");
      const monthSel = document.getElementById("month-filter");
      const typeSel = document.getElementById("type-filter");
      const clearBtn = document.getElementById("clear-filters");

      function saveFilters() {
        const state = { c: continentSel.value, m: monthSel.value, t: typeSel.value };
        sessionStorage.setItem(STORAGE_KEY, JSON.stringify(state));
      }
      function loadFilters() {
        const raw = sessionStorage.getItem(STORAGE_KEY);
        if (!raw) return;
        const { c = "", m = "", t = "" } = JSON.parse(raw);
        continentSel.value = c; monthSel.value = m; typeSel.value = t;
      }
      function applyFilters() {
        const c = continentSel.value, m = monthSel.value, t = typeSel.value;
        tripList.filter(item => {
          const el = item.elm;
          return (
            (!c || el.dataset.continent === c) &&
            (!m || el.dataset.month === m) &&
            (!t || el.dataset.type === t)
          );
        });
        updateClearState(); saveFilters();
      }
      function clearFilters() {
        continentSel.value = monthSel.value = typeSel.value = "";
        tripList.filter(); updateClearState(); saveFilters();
      }
      function updateClearState() {
        clearBtn.disabled = !(continentSel.value || monthSel.value || typeSel.value);
      }
      loadFilters(); applyFilters();
      continentSel.addEventListener("change", applyFilters);
      monthSel.addEventListener("change", applyFilters);
      typeSel.addEventListener("change", applyFilters);
      clearBtn.addEventListener("click", clearFilters);
    });
  </script>
</Layout>