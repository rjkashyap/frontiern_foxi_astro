---
import Layout from '../layouts/Layout.astro'
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import FeatureCard from '../components/ui/cards/FeatureCard.astro'

const SEO = {
  title: 'Mission Trips | Frontier Nations',
  description:
    'Explore upcoming mission trips and training opportunities from Frontier Nations. Filter by continent, month, and trip type to find your fit.',
}

// Trip data (you can later move this to /src/data/trips.json or CloudCannon)
const trips = [
  {
    title: 'Nepal – April 2026',
    subtitle: 'Short-term outreach in Kathmandu.',
    image: '/assets/trips/nepal.jpg',
    continent: 'asia',
    month: '2026-04',
    type: 'short-term',
  },
  {
    title: 'Fiji – July 2026',
    subtitle: 'Training + village evangelism.',
    image: '/assets/trips/fiji.jpg',
    continent: 'pacific',
    month: '2026-07',
    type: 'training',
  },
  {
    title: 'Kenya – May 2026',
    subtitle: 'Partnering with local churches in Nairobi.',
    image: '/assets/trips/kenya.jpg',
    continent: 'africa',
    month: '2026-05',
    type: 'outreach',
  },
  {
    title: 'Samoa – September 2026',
    subtitle: 'Discipleship & youth ministry.',
    image: '/assets/trips/samoa.jpg',
    continent: 'pacific',
    month: '2026-09',
    type: 'discipleship',
  },
  {
    title: 'Thailand – January 2027',
    subtitle: 'Campus outreach + prayer walks.',
    image: '/assets/trips/thailand.jpg',
    continent: 'asia',
    month: '2027-01',
    type: 'campus',
  },
  {
    title: 'Malaysia – January 2026',
    subtitle: 'City evangelism & leadership huddles.',
    image: '/assets/trips/malaysia.jpg',
    continent: 'asia',
    month: '2026-01',
    type: 'outreach',
  },
]
---

<Layout title={SEO.title} description={SEO.description}>
  <Section id="mission-trips" classes="pt-20 pb-24">
    <Row>
      <Col span="12" align="center" classes="mb-8 max-w-4xl mx-auto">
        <h1 class="text-pretty text-3xl sm:text-4xl font-semibold mb-3">
          Mission Trips
        </h1>
        <p class="text-neutral-400 text-lg">
          Explore short-term, training, and discipleship trips across the nations.
        </p>
      </Col>
    </Row>

    <!-- Filter Controls -->
    <Row>
      <Col span="12" align="center">
        <div
          class="controls inline-flex flex-wrap items-center justify-center gap-3 rounded-xl border border-neutral-800 bg-neutral-900/60 px-4 py-3"
        >
          <!-- Continent -->
          <div class="flex flex-col sm:flex-row items-center gap-2">
            <label for="continent-filter" class="text-sm text-neutral-400">Continent:</label>
            <select
              id="continent-filter"
              class="px-3 py-1.5 bg-neutral-950 border border-neutral-800 rounded-lg text-sm text-neutral-200 focus:border-primary-500 focus:ring-0"
            >
              <option value="">All</option>
              <option value="asia">Asia</option>
              <option value="pacific">Pacific</option>
              <option value="africa">Africa</option>
            </select>
          </div>

          <!-- Month -->
          <div class="flex flex-col sm:flex-row items-center gap-2">
            <label for="month-filter" class="text-sm text-neutral-400">Month–Year:</label>
            <select
              id="month-filter"
              class="px-3 py-1.5 bg-neutral-950 border border-neutral-800 rounded-lg text-sm text-neutral-200 focus:border-primary-500 focus:ring-0"
            >
              <option value="">All</option>
              <option value="2026-01">Jan 2026</option>
              <option value="2026-04">Apr 2026</option>
              <option value="2026-05">May 2026</option>
              <option value="2026-07">Jul 2026</option>
              <option value="2026-09">Sep 2026</option>
              <option value="2027-01">Jan 2027</option>
            </select>
          </div>

          <!-- Type -->
          <div class="flex flex-col sm:flex-row items-center gap-2">
            <label for="type-filter" class="text-sm text-neutral-400">Trip Type:</label>
            <select
              id="type-filter"
              class="px-3 py-1.5 bg-neutral-950 border border-neutral-800 rounded-lg text-sm text-neutral-200 focus:border-primary-500 focus:ring-0"
            >
              <option value="">All</option>
              <option value="short-term">Short-term</option>
              <option value="training">Training</option>
              <option value="discipleship">Discipleship</option>
              <option value="outreach">Outreach</option>
              <option value="campus">Campus</option>
            </select>
          </div>

          <!-- Clear -->
          <button
            id="clear-filters"
            type="button"
            disabled
            class="px-4 py-1.5 text-sm rounded-lg border border-neutral-700 text-neutral-300 hover:bg-neutral-800 hover:text-neutral-100 disabled:opacity-40"
          >
            Clear all filters
          </button>
        </div>
      </Col>
    </Row>

    <!-- Trip Grid -->
    <Row>
      <Col span="12">
        <div id="trips" class="mt-10">
          <ul class="list grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {trips.map((t) => (
              <li
                class="trip-card flex flex-col"
                data-continent={t.continent}
                data-month={t.month}
                data-type={t.type}
              >
                <FeatureCard title={t.title} subtitle={t.subtitle} image={t.image} />
              </li>
            ))}
          </ul>
        </div>
      </Col>
    </Row>
  </Section>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js" defer></script>
  <script is:inline>
    window.addEventListener("DOMContentLoaded", () => {
      const tripList = new List("trips", { valueNames: ["trip-name", "trip-desc"] });

      const continentSel = document.getElementById("continent-filter");
      const monthSel = document.getElementById("month-filter");
      const typeSel = document.getElementById("type-filter");
      const clearBtn = document.getElementById("clear-filters");

      function applyFilters() {
        const c = continentSel.value;
        const m = monthSel.value;
        const t = typeSel.value;

        if (!c && !m && !t) {
          tripList.filter();
        } else {
          tripList.filter((item) => {
            const el = item.elm;
            return (
              (!c || el.dataset.continent === c) &&
              (!m || el.dataset.month === m) &&
              (!t || el.dataset.type === t)
            );
          });
        }
        updateClearState();
      }

      function clearFilters() {
        continentSel.value = "";
        monthSel.value = "";
        typeSel.value = "";
        tripList.filter();
        updateClearState();
      }

      function updateClearState() {
        clearBtn.disabled = !(continentSel.value || monthSel.value || typeSel.value);
      }

      continentSel.addEventListener("change", applyFilters);
      monthSel.addEventListener("change", applyFilters);
      typeSel.addEventListener("change", applyFilters);
      clearBtn.addEventListener("click", clearFilters);
      updateClearState();
    });
  </script>
</Layout>