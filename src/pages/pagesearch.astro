---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import SidebarContent from '../components/blocks/basic/StickySidebar.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'

// Content
// - SEO
const SEO = {
  title: 'Foxi | Terms of Service',
  description:
    "Foxi's terms of service outlines the rules and regulations that govern your use of our services. Please read them carefully to understand your rights and responsibilities."
}
// - Page Header
const header = {
  title: 'Terms and Conditions: Read, Relax, <strong>Enjoy!</strong>',
  text: 'Please read them carefully to understand your rights and responsibilities.'
}
---

<Layout title={SEO.title} description={SEO.description}>
  <Hero title={header.title} text={header.text} />
  <SidebarContent>
    <div slot="sidebar">
      <h3>Introduction</h3>
      <p>
        Please take a moment to read through these terms to understand your rights and
        responsibilities while using our services.
      </p>
    </div>

    <div class="basic-text">
      <h4>Welcome to Foxi</h4>

      <!-- Pagefind UI assets -->
      <link rel="stylesheet" href="/search/pagefind-ui.css" />
      <script src="/search/pagefind-ui.js"></script>

      <!-- Pagefind UI mount point -->
      <div id="trip-search"></div>

      <!-- Initialise Pagefind UI -->
      <script is:inline>
        // @ts-ignore PagefindUI is provided by the script above
        new (window as any).PagefindUI({
          element: "#trip-search",
          basePath: "/search/"
        });
      </script>
    </div>
  </SidebarContent>
</Layout>