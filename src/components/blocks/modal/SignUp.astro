---
// Signup Modal â€” embeds external Form0 form inside Foxi modal
import Modal from '../../ui/Modal.astro'

type Props = { classes?: string }
const { classes } = Astro.props
---

<Modal id="signup" classes={classes} title="Sign up">
  <!-- Wrapper controls the usable height inside the modal body -->
  <div class="embed-wrap">
    <iframe
      src="https://form0.app/forms/JlKo7x"
      width="100%"
      height="100%"
      frameborder="0"
      style="border: none; max-width: 100%;"
      title="Form: JlKo7x"
    ></iframe>
  </div>
</Modal>

<style>
  /* Remove default modal body padding so the iframe can truly fill it */
  .modal__body {
    padding: 0;
  }

  /* Give the iframe a nice tall area inside the modal.
     Tweak per breakpoint to respect your 80% cap while leaving header room. */
  .embed-wrap {
    height: 70vh;
  }
  @media (min-width: 640px) { /* sm */
    .embed-wrap { height: 74vh; }
  }
  @media (min-width: 1024px) { /* lg */
    .embed-wrap { height: 76vh; }
  }
</style>