---
// Signup Modal (Contact Form version)
// Keeps Foxi overlay, blur, centering, and animation
// Adds background scroll lock when modal is open

import Modal from '../../ui/Modal.astro'
import Form from '../../ui/forms/Form.astro'
import FormField from '../../ui/forms/partials/FormField.astro'
import InputField from '../../ui/forms/form-elements/InputField.astro'
import TextArea from '../../ui/forms/form-elements/TextArea.astro'
import Button from '../../ui/Button.astro'

type Props = { classes?: string }
const { classes } = Astro.props
---

<Modal id="signup" classes={classes} title="Contact Us">
  <!-- Form container inside the modal (not overlay) -->
  <div class="mx-auto w-full max-w-3xl py-6 sm:py-10 max-h-[calc(100vh-4rem)] overflow-y-auto">
    <p class="mb-6 text-base leading-relaxed">
      Tell us a bit about your enquiry and we'll get back to you.
    </p>

    <Form>
      <FormField>
        <InputField type="text" id="firstName" label="First Name" />
        <InputField type="text" id="lastName" label="Last Name" />
      </FormField>

      <FormField>
        <InputField type="email" id="email" label="Email" required value="name@youremail.com" />
      </FormField>

      <FormField>
        <InputField type="tel" id="phone" label="Phone Number" />
      </FormField>

      <FormField>
        <TextArea id="message" label="Your Message" />
      </FormField>

      <div class="mt-6 text-center">
        <Button style="primary" type="submit" size="lg">
          Send Message
        </Button>
      </div>
    </Form>
  </div>
</Modal>

<style>
  /* Consistent form spacing and style */
  .modal__body form {
    @apply space-y-4;
  }

  .modal__body p {
    @apply text-neutral-600 dark:text-neutral-300;
  }

  .modal__popup {
    @apply transition-transform duration-500 ease-out;
  }

  /* Smooth, subtle scrollbar inside modal body */
  .modal__body::-webkit-scrollbar {
    width: 8px;
  }
  .modal__body::-webkit-scrollbar-thumb {
    @apply bg-neutral-300 dark:bg-neutral-700 rounded;
  }

  /* When modal is open, lock the page scroll */
  body.modal-open {
    overflow: hidden;
  }
</style>

<script is:inline>
  // Locks background scroll when modal opens/closes
  document.addEventListener('astro:page-load', () => {
    const modals = document.querySelectorAll('.modal');

    modals.forEach((modal) => {
      const observer = new MutationObserver(() => {
        if (modal.classList.contains('open')) {
          document.body.classList.add('modal-open');
        } else {
          document.body.classList.remove('modal-open');
        }
      });

      observer.observe(modal, { attributes: true, attributeFilter: ['class'] });
    });
  });
</script>