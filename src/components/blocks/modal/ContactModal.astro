---
// Contact Modal (matches Signup modal structure, capped form width)
import Modal from '../../ui/Modal.astro'
import Form from '../../ui/forms/Form.astro'
import FormField from '../../ui/forms/partials/FormField.astro'
import InputField from '../../ui/forms/form-elements/InputField.astro'
import TextArea from '../../ui/forms/form-elements/TextArea.astro'
import Button from '../../ui/Button.astro'

type Props = { classes?: string }
const { classes } = Astro.props
---

<Modal id="contact" classes={classes} title="Contact Us">
  <!-- Cap inner content width so the form isn’t too wide -->
  <div class="mx-auto w-full max-w-xl">
    <p class="mb-4">Tell us a bit about your enquiry and we'll get back to you.</p>

    <Form>
      <FormField>
        <InputField type="text" id="firstName" label="First Name" />
        <InputField type="text" id="lastName" label="Last Name" />
      </FormField>

      <FormField>
        <InputField type="email" id="email" label="Email" required />
      </FormField>

      <FormField>
        <InputField type="tel" id="phone" label="Phone Number" />
      </FormField>

      <FormField>
        <TextArea id="message" label="Your Message" />
      </FormField>

      <!-- Remove w-full so the button isn’t full-width -->
      <Button style="primary" type="submit" size="lg">
        Send Message
      </Button>
    </Form>
  </div>
</Modal>