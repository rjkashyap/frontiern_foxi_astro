---
// Contact Modal
// ---------------
// Reuses the existing BasicForm inside the shared Modal component.
// Opens from any element with modal="contact".

import Modal from '../../ui/Modal.astro'
import BasicForm from '../contact/BasicForm.astro'

// Props
type Props = { classes?: string }
const { classes } = Astro.props
---

<Modal id="contact" classes={classes} title="Contact Us">
  <BasicForm classes="max-w-none" />
</Modal>