---
type Props = {
  id: string
  title?: string
  classes?: string
}

const { id, title, classes } = Astro.props
---

<!-- MicroModal outer container -->
<div
  id={id}
  class:list={['modal micromodal-slide', classes]}
  aria-hidden="true"
>

  <!-- Overlay -->
  <div class="modal__overlay" tabindex="-1" data-micromodal-close>

    <!-- Popup -->
    <div
      class="modal__container"
      role="dialog"
      aria-modal="true"
      aria-labelledby={`${id}-title`}
    >

      <!-- Header -->
      <header class="modal__header">
        {title && <h2 class="modal__title" id={`${id}-title`}>{title}</h2>}
        <button
          class="modal__close"
          aria-label="Close modal"
          data-micromodal-close
        >
          âœ•
        </button>
      </header>

      <!-- Body -->
      <main class="modal__content" id={`${id}-content`}>
        <slot />
      </main>

    </div>
  </div>
</div>

<style>
  /* REQUIRED structure for MicroModal */
  .modal {
    display: none;
  }
  .modal.is-open {
    display: block;
  }

  .modal__overlay {
    background: rgba(0,0,0,0.55);
    position: fixed;
    top: 0; left: 0;
    width: 100vw;
    height: 100vh;
    display: grid;
    place-items: center;
    padding: 1rem;
  }

  .modal__container {
    background: white;
    color: black;
    border-radius: 10px;
    max-width: 600px;
    width: 100%;
    padding: 2rem;
    position: relative;
  }

  .modal__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .modal__close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
  }

  .modal__content {
    max-height: 70vh;
    overflow-y: auto;
  }
</style>
