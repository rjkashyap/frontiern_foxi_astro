---
// Highlight
// ------------
// Description: a simple component to highlight specific words or phrases
// Properties:
// - Type: the type of the highlight (1, 2, 3, 4)
// - classes: additional classes
// - colorFrom: For the type 4 (gradient) the initial color
// - colorTo: For the type 4 (gradient) the final color

// Props
type Props = {
	type?: string
	classes?: string
	colorFrom?: string
	colorTo?: string
}
const { type = '1', classes, colorFrom: _colorFrom, colorTo: _colorTo } = Astro.props
---

<span
	class:list={[
		'highlight',
		{ [`highlight--${type}`]: type },
		{
			'bg-gradient-to-r from-neutral-900 via-neutral-800 to-neutral-700 dark:from-neutral-100 dark:via-neutral-200 dark:to-neutral-300':
				type === '4'
		},
		{ [`${classes}`]: classes }
	]}
>
	<slot />
</span>

<style>
	.highlight {
		@apply relative inline-block before:absolute before:-bottom-1 before:-left-1 before:-right-1 before:-top-1 before:z-[-1];
	}
	.highlight--1 {
		@apply text-neutral-900 dark:text-neutral-100;
	}
	.highlight--2 {
		@apply px-4 text-black before:bg-neutral-200 dark:text-black;
	}
	.highlight--3 {
		@apply px-4 text-white before:-rotate-2 before:bg-neutral-900 lg:before:-bottom-2 lg:before:-top-2 dark:text-black dark:before:bg-neutral-200;
	}
	.highlight--4 {
		@apply bg-clip-text text-transparent;
	}
</style>
