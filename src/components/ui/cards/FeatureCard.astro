---
// Feature Card
// ------------
// Description: Card presenting a feature with a bottom “Learn more” button 
// that opens the same signup modal as the “Try it now” button in the navbar.

import Card from './BasicCard.astro'
import Button from '../Button.astro'

type Props = {
  title?: string
  subtitle?: string
  image?: any
  link?: string
}

const { title, subtitle, image, link } = Astro.props
---

<div class="flex h-full w-full">
  <div class="flex flex-col h-full w-full">
    <Card
      title={title}
      subtitle={subtitle}
      link={link}
      image={image}
      type="image-bottom"
      classes="!bg-neutral-50 !shadow-none dark:!bg-neutral-900 h-full flex flex-col justify-between border border-neutral-100 dark:border-neutral-800"
    >
      <!-- Bottom action area -->
      <div class="mt-2 mb-2 flex justify-center">
        <!-- Use the same modal trigger as the navbar -->
        <Button modal="signup" style="primary" size="sm">
          Learn more
        </Button>
      </div>
    </Card>
  </div>
</div>