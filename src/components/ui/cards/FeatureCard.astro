---
interface Props {
  title: string
  subtitle: string
  image: ImageMetadata
}

const { title, subtitle, image } = Astro.props
---

<div
  class="relative flex flex-col items-start justify-between rounded-lg border border-neutral-800 bg-neutral-900/60 p-6 shadow-md transition hover:-translate-y-1 hover:shadow-lg cursor-pointer"
  data-modal="signup"
>
  <div class="flex flex-col gap-4">
    <img src={image.src} alt={title} class="h-16 w-16 object-contain" />
    <div>
      <h3 class="text-lg font-semibold text-white">{title}</h3>
      <p class="text-sm text-neutral-400">{subtitle}</p>
    </div>
  </div>

  <button
    type="button"
    data-modal="signup"
    class="mt-6 inline-flex items-center gap-1 rounded-md border border-primary-500 bg-primary-500/10 px-3 py-1.5 text-sm font-medium text-primary-400 transition hover:bg-primary-500 hover:text-white"
  >
    Learn More
  </button>
</div>