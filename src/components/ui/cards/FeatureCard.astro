---
// Feature Card
// ------------
// Description: Card presenting a feature, with a bottom “Learn more” button that opens
// the modal id="opportunities". No titleSize prop is passed to avoid build errors.

// Components
import BasicCard from './BasicCard.astro'
import Button from '../Button.astro'

// Props
type Props = {
  title?: string
  subtitle?: string
  image?: any
  link?: string
}
const { title , subtitle, image, link } = Astro.props
---

<div class="flex h-full w-full">
  <div class="flex flex-col h-full w-full">
    <BasicCard
      title={title}
      subtitle={subtitle}
      link={link}
      image={image}
      type="image-bottom"
      classes="!bg-neutral-50 !shadow-none dark:!bg-neutral-900 h-full flex flex-col justify-between border border-neutral-100 dark:border-neutral-800 rounded-xl overflow-hidden"
    >
      <!-- Footer / CTA -->
      <div class="mt-auto pt-4 pb-5 flex justify-center">
        <Button modal="opportunities" style="primary" size="sm">
          Learn more
        </Button>
      </div>
    </BasicCard>
  </div>
</div>