---
// Feature Card
// ------------
// Whole card (including “Learn more” button) opens the signup modal.
// No external navigation; link prop removed.

import Card from './BasicCard.astro'
import Button from '../Button.astro'

type Props = {
  title?: string
  subtitle?: string
  image?: any
}

const { title, subtitle, image } = Astro.props
---

<!-- Whole card acts as modal trigger -->
<div class="relative h-full w-full">
  <!-- Full-card invisible button triggers modal -->
  <button
    type="button"
    data-modal="signup"
    aria-label={`Open signup modal for ${title ?? 'this feature'}`}
    class="absolute inset-0 z-10 bg-transparent cursor-pointer"
  ></button>

  <div class="flex h-full w-full">
    <div class="flex flex-col h-full w-full">
      <Card
        title={title}
        subtitle={subtitle}
        image={image}
        type="image-bottom"
        classes="!bg-neutral-50 !shadow-none dark:!bg-neutral-900 h-full flex flex-col justify-between border border-neutral-100 dark:border-neutral-800"
      >
        <!-- Bottom action area (same modal trigger, visually present) -->
        <div class="mt-1 mb-2 flex justify-center relative z-20">
          <button
            type="button"
            data-modal="signup"
            class="button button--sm button--primary !py-1.5 !px-3"
          >
            Learn more
          </button>
        </div>
      </Card>
    </div>
  </div>
</div>