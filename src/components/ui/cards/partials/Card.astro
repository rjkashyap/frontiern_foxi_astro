---
// Card
// ------------
// Description: the basic card foundation. Contains the background, shadow and border radius
// Properties:
// - link: will allow the whole card to be linkable
// - classes: extra classes

// Props
type Props = {
	link?: string
	classes?: string
}
const { link, classes } = Astro.props
---

{
	link ? (
		<a
			href={link}
			class:list={[
				'card',
				'bg-white',
				'text-black',
				'dark:bg-black',
				'dark:text-white',
				'border',
				'border-default',
				'shadow-lg',
				'shadow-black',
				{ [`${classes}`]: classes }
			]}
		>
			<slot />
		</a>
	) : (
		<div
			class:list={[
				'card',
				'bg-white',
				'text-black',
				'dark:bg-black',
				'dark:text-white',
				'border',
				'border-default',
				'shadow-lg',
				'shadow-black',
				{ [`${classes}`]: classes }
			]}
		>
			<slot />
		</div>
	)
}
<style>
	.card {
		@apply flex flex-col overflow-hidden rounded;
	}
</style>
