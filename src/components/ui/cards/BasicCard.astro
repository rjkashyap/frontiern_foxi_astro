---
// Feature Card
// ------------
// Description: The Card for presenting a feature
// Properties:
// - Title: the title of the card
// - Subtitle: the subtitle of the card
// - Image: the main image of the card
// - Link: optional link (not used when opening modal)
//
// This version adds a "Learn more" button fixed at the bottom,
// opening the modal with id="opportunities".

// Components
import Card from './BasicCard.astro'
import Button from '../Button.astro'

type Props = {
  title?: string
  subtitle?: string
  image?: any
  link?: string
}
const { title, subtitle, image, link } = Astro.props
---

<Card
  title={title}
  subtitle={subtitle}
  titleSize="xl"
  link={link}
  image={image}
  type="image-bottom"
  classes="!bg-neutral-50 !shadow-none dark:!bg-neutral-900 h-full flex flex-col justify-between border border-neutral-100 dark:border-neutral-800"
/>
  <div class="mt-auto pt-4 pb-4 flex justify-center">
    <Button modal="opportunities" style="primary" size="sm">
      Learn more
    </Button>
  </div>
</Card>

<style>
  /* Ensures uniform button spacing and clean bottom alignment */
  .card button {
    @apply cursor-pointer transition;
  }

  .card .mt-auto {
    margin-top: auto;
  }
</style>